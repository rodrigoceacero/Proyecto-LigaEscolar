{% for person in people %}
    <div class="contenedor-principal">
        <div class="contenedor-expandir">
            <div class="expandible">
                {% if person.isPlayer == 1 and person.isTeacher == 0 %}
                <div class="contenedor-persona">
                    <span class="titulo-card"><h2>{{ person.firstName }} {{ person.lastName }}</h2></span>
                    <span class="p-rol"><p>Jugador</span>
                </div>
                {% else %}
                <div class="contenedor-persona">
                    <span class="titulo-card"><h2>{{ person.firstName }} {{ person.lastName }}</h2></span>
                    <span class="p-rol"><p>Profesor</span>
                </div>
                {% endif %}
                <div class="iconos">
                    {% if is_granted('ROLE_DEVELOPER') or is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('person_edit', {'id': person.id}) }}" class="boton"><i class="ti ti-edit a-botones"></i></a>
                        <a href="{{ path('delete_person', {'id': person.id}) }}" class="boton btn-delete" data-id="{{ person.id }}" data-name="{{ person.firstName }}"><i class="ti ti-trash a-botones"></i></a>
                    {% endif %}
                        <a href="{{ path('team_players', {'id': person.teamId}) }}" class="boton desplegar"><i class="ti ti-shirt a-botones"></i></a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}