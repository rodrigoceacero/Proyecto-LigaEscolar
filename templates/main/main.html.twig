{% extends 'base.html.twig' %}

{% block header %}
    {% include 'navbar.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid light d-flex vh-100 justify-content-center align-items-center text-white" style="cursor:pointer;">
        {% if is_granted('ROLE_DEVELOPER') or is_granted('ROLE_ADMIN')%}
            <div class="container-fluid light d-flex justify-content-center align-items-center text-white">
                {% include 'team/teamcard.html.twig' %}
                {% include 'sport/sportcard.html.twig' %}
                {% include 'person/personcard.html.twig' %}
                {% include 'match/matchcard.html.twig' %}
                {% include 'season/seasoncard.html.twig' %}
            </div>
        {% else %}
            <div class="container-fluid light d-flex justify-content-center align-items-center text-white">
                {% include 'team/teamcard.html.twig' %}
                {% include 'sport/sportcard.html.twig' %}
                {% include 'match/matchcard.html.twig' %}
            </div>
        {% endif %}
    </div>
{% endblock %}