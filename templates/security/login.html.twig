{% extends 'layout.html.twig' %}

{% block title %}Inicio de sesión{% endblock %}

{% block body %}
    <div class="container">
        <h1>INICIO DE SESIÓN</h1>
        {% if error %}
            <div class="alert alert-danger alert-dismissible">
                {{ error.messageKey|trans(error.messageData, 'security')}}
            </div>
        {% endif %}
        <form method="post" class="form">
            <label for="_username">
                <input type="text" name="_username" value="{{ last_username }}" placeholder="Introduce tu usuario" class="form-control" {% if not last_username %}autofocus{% endif %}>
            </label>
            <label for="_password">
                <input type="password" name="_password" placeholder="Introduce tu contraseña" class="form-control" {% if last_username %}autofocus{% endif %}>
            </label>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>
{% endblock %}
