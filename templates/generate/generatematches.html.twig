    {% extends 'base.html.twig' %}

    {% block title %}Generar cruces{% endblock %}

    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css">
        <link rel="stylesheet" href="{{ asset('css/form.css') }}">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <script>
            $(document).ready(function() {
                $('.form-select-deporte').select2();
            });
        </script>
    {% endblock %}

    {% block header %}
        {% include 'navbar.html.twig' %}
    {% endblock %}

    {% block body %}
        {% for message in app.flashes('error') %}
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '{{ message }}'
                });
            </script>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <script>
                Swal.fire({
                    icon: 'success',
                    title: 'Ã‰xito',
                    text: '{{ message }}'
                });
            </script>
        {% endfor %}
        <div class="contenedor">
            <div class="contenedor-cabecera">
                <div>
                    <h2 class="titulo-form">
                        Selecciona los datos para generar partidos
                    </h2>
                </div>
            </div>
            <div class="contenedor-form">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div>
                    {{ form_label(form.sport) }}
                    {{ form_widget(form.sport) }}
                    <div class="error">{{ form_errors(form.sport) }}</div>
                </div>
                <div>
                    {{ form_label(form.season) }}
                    {{ form_widget(form.season) }}
                    <div class="error">{{ form_errors(form.season) }}</div>
                </div>
            </div>
            <div>
                <div class="contenedor-footer-form">
                    <div>
                        {{ form_label(form.generate) }}
                        {{ form_widget(form.generate) }}
                    </div>
                    {{ form_end(form) }}
                    <a href="{{ path('main_app') }}" class="boton-volver-form"><i class="ti ti-arrow-left icono-agregar"></i> Volver</a>
                </div>
            </div>
        </div>
    {% endblock %}
